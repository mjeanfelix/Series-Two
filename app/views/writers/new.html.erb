<h1>Sign Up</h1>
<%= form_for @writer do |f| %>
  <% if @writer.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @writer.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <p>
  <p>
    <%= f.label :education %><br>
    <%= f.text_field :education %>
  <p>
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </p>
  </p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </p>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
<div class="end"</div></br>




